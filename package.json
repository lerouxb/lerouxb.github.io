{
  "name": "static-attic",
  "version": "1.0.0",
  "description": "A static site generator for a personal blog",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "reformat": "prettier --write .",
    "validate": "node scripts/validate.ts",
    "new": "node scripts/new.ts",
    "check": "eslint . && prettier --check ."
  },
  "dependencies": {
    "@shikijs/markdown-it": "^3.2.1",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.13.1",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^3.0.5"
  }
}
